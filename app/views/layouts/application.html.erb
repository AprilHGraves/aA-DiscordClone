<!DOCTYPE html>
<html>
  <head>
    <title>DiscordClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag image_url('https://discordapp.com/assets/07dca80a102d4149e9736d4b162cff6f.ico') %>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <script>
        window.currentUser = ({
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "tag": "<%= current_user.tag %>",
          "email": "<%= current_user.email %>"
          
        });
      </script>
    <% end %>
    <script type="text/javascript">
      window.splashImg = "<%= image_url('splash_bg.png') %>"
      window.logoImg = "<%= image_url('logo.png') %>"
      window.logoTxtImg = "<%= image_url('logo_text.png') %>"
      window.logo2Img = "<%= image_url('logo2.png') %>"
    </script>
    <%= yield %>
  </body>
</html>
